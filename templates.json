{
	"model": "templates",
	"data": [
		{
			"label": "Default Referrals Template",
			"template_type_id": "referral",
			"subject": "Here are your listings, {{$}}{{recipient.name}}{{/}}",
			"description": "Folds in listings data with a very rough layout. Don't hate me.",
			"body": "<p>Hello {{$}}{{recipient.name}}{{/}}</p>\n\n<p>Here is the information you requested. </p>\n\n{{#listings}}\n<div style=\"width: 600px; border: 1px solid #666; padding: 10px; display: flex;\">\n    <div style=\"width: 150px; padding-top: 15px; min-width: 150px;\">\n        <p><img src=\"{{image.url}}\" alt=\"{{image.title}}\"></p>\n    </div>\n    <div style=\"padding: 10px; display: flex; flex-direction: column;\">\n        <div>\n            <h2>{{title}}</h2>\n        </div>\n        <table>\n            <tbody>\n                <tr>\n                    <th style=\"vertical-align: top; text-align: left;\"><p>Address:</p></th>\n                    <td>\n                        <p>{{property.address_line_1}}{{property.address_line_2}}{{property.address_line_3}}, \n                        {{property.city}}, {{property.postal_code}}, {{property.region}}, {{property.country}}</p>\n                    </td>\n                </tr>\n                <tr>\n                    <th style=\"vertical-align: top; text-align: left;\"><p>Region:</p></th>\n                    <td>\n                        <p>{{property.region}}</p>\n                    </td>\n                </tr>\n                <tr>\n                    <th style=\"vertical-align: top; text-align: left;\"><p>Phone:</p></th>\n                    <td>\n                        <p><a target=\"_blank\" rel=\"noopener noreferrer nofollow\" href=\"#\">{{property.phone}}</a></p>\n                    </td>\n                </tr>\n                <tr>\n                    <th style=\"vertical-align: top; text-align: left;\"><p>Email:</p></th>\n                    <td>\n                        <p><a target=\"_blank\" rel=\"noopener noreferrer nofollow\" href=\"mailto:{{property.email}}\">{{property.email}}</a></p>\n                    </td>\n                </tr>\n                <tr>\n                    <th style=\"vertical-align: top; text-align: left;\"><p>Website:</p></th>\n                    <td>\n                        <p><a target=\"_blank\" rel=\"noopener noreferrer nofollow\" href=\"{{property.weburl}}\">{{property.weburl}}</a></p>\n                    </td>\n                </tr>\n                <tr>\n                    <th style=\"vertical-align: top; text-align: left;\"><p>Featured?:</p></th>\n                    <td>\n                        <p>{{is_featured}}</p>\n                    </td>\n                </tr>\n                <tr>\n                    <th style=\"vertical-align: top; text-align: left;\"><p>Summary URL:</p></th>\n                    <td>\n                        <p>{{summary_url}}</p>\n                    </td>\n                </tr>\n                <tr>\n                    <th style=\"vertical-align: top; text-align: left;\"><p>Description:</p></th>\n                    <td>\n                        <p>{{description}}</p>\n                    </td>\n                </tr>\n                <tr>\n                    <th style=\"vertical-align: top; text-align: left;\"><p>Total Sleeping Rooms:</p></th>\n                    <td>\n                        <p>{{property.total_sleeping_rooms}}</p>\n                    </td>\n                </tr>\n            </tbody>\n        </table>\n    </div>\n</div>\n\n<p>{{/listings}}</p>"

		}
	]
}